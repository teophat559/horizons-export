VITE_API_BASE=https://api.your-domain.com/api

# Bật/tắt tính năng
VITE_AUTO_LOGIN_ENABLED=true
VITE_TELEGRAM_NOTIF_ENABLED=false
VITE_LOGIN_BOT_ENABLED=false

# Endpoint tuỳ chỉnh (tùy chọn)
# Nếu dùng bot/agent riêng để gửi request đăng nhập thay vì backend
VITE_LOGIN_BOT_ENDPOINT=

# Endpoint xác minh admin (tùy chọn). Mặc định dùng backend /api/admin/verify-key
VITE_ADMIN_VERIFY_ENDPOINT=

# Telegram (nếu dùng)
VITE_TELEGRAM_BOT_TOKEN=
VITE_TELEGRAM_CHAT_ID=

# Tích hợp MoreLogin (nếu dùng auto-login agent)
VITE_USE_MORELOGIN=false
VITE_MORELOGIN_FUNCTION_URL=/.netlify/functions/morelogin
VITE_AGENT_URL=https://agent.your-domain.com
